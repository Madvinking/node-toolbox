{
  "name": "logzio-node-tools",
  "private": true,
  "version": "0.0.1",
  "private":"true",
  "description": "the perfect node templates & tools",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/logzio/node-toolbox.git"
  },
  "scripts": {
    "clean": "lerna clean && rm -rf node_modules",
    "postinstall": "husky install",
    "test": "jest --config jest.config.cjs",
    "compile": "rollup -c --ignore @logzio-node-toolbox/test",
    "test:watch": "jest --watch --config jest.config.cjs",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --config jest.config.cjs",
    "lint": "eslint -c .eslintrc.cjs  --quiet --color packages/**/*.js",
    "checkLicense": "license-checker | grep 'licenses:' | sort -u",
    "ncu": "lerna run upkg && yarn upkg",
    "upkg": "ncu -u"
  },
  "author": "Nir Winkler",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "@lerna/batch-packages": "^3.16.0",
    "@lerna/filter-packages": "^4.0.0",
    "@lerna/project": "^4.0.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@rollup/plugin-node-resolve": "13.0.0",
    "@rollup/plugin-commonjs": "18.1.0",
    "@types/lodash": "^4.14.168",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "babel-jest": "^26.6.3",
    "core-js": "^3.11.3",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lerna": "^4.0.0",
    "license-checker": "25.0.1",
    "minimist": "^1.2.5",
    "nodemon": "2.0.7",
    "npm-check-updates": "11.5.10",
    "prettier": "^2.2.1",
    "rollup": "2.47.0",
    "rollup-plugin-copy": "^3.4.0",
    "typescript": "4.2.4"
  },
  "engines": {
    "node": "<=15.3.0"
  },
  "volta": {
    "node": "15.6.0",
    "yarn": "1.22.10"
  }
}
