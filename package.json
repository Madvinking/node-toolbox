{
  "name": "logzio-node-tools",
  "version": "0.0.0",
  "description": "the perfect node templates & tools",
  "main": "src/index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "lerna clean && rm -rf node_modules",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --watch --config jest.config.cjs",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --config jest.config.cjs",
    "lint": "eslint -c .eslintrc.cjs  --quiet --color packages/**/*.js",
    "upkg": "lerna run upkg && ncu"
  },
  "author": "Nir Winkler",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "babel-jest": "^26.1.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lerna": "^3.22.1",
    "npm-check-updates": "7.0.2",
    "prettier": "^2.0.5",
    "typescript": "3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test && yarn upkg",
      "pre-push": ""
    }
  },
  "engines": {
    "node": "<=14.5.0"
  }
}
