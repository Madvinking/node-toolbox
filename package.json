{
  "name": "madvinking-node-tools",
  "version": "0.0.0",
  "description": "the perfect node template & tools",
  "main": "src/index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "lerna clean && rm -rf node_modules",
    "test": "jest --config jest.config.cjs",
    "lint": "eslint -c .eslintrc.cjs  --quiet --color packages/**/*.js",
    "update-packages": "lerna run update-packages && ncu"
  },
  "author": "Nir Winkler",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "babel-jest": "^26.1.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lerna": "^3.22.1",
    "npm-check-updates": "7.0.1",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test",
      "pre-push": "yarn update-packages"
    }
  },
  "engines": {
    "node": "<=14.5.0"
  }
}
